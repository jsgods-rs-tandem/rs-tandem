{
  "name": "rs-tandem",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "npm start -w @rs-tandem/frontend",
    "start:backend": "npm run start:dev -w @rs-tandem/backend",
    "dev": "concurrently \"npm:start:frontend\" \"npm:start:backend\"",
    "build": "npm run build --ws --if-present",
    "test": "npm run test --ws --if-present",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p packages/shared && tsc --noEmit -p packages/frontend && tsc --noEmit -p packages/backend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "angular-eslint": "^18.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "stylelint": "^17.3.0",
    "stylelint-config-clean-order": "^8.0.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "validate-branch-name": "^1.3.2"
  }
}
